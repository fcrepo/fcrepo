<infinispan xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="urn:infinispan:config:7.2"
    xsi:schemaLocation="urn:infinispan:config:7.2 http://www.infinispan.org/schemas/infinispan-config-6.0.xsd">
  
  <cache-container  default-cache="FedoraRepository" statistics="false">
    <jmx duplicate-domains="true"/>

    <local-cache name="FedoraRepository" >
      <transaction transaction-manager-lookup="org.infinispan.transaction.lookup.GenericTransactionManagerLookup"
                   mode="NON_XA"
                   locking="OPTIMISTIC" />

      <persistence passivation="false">
        <file-store shared="false"
                    preload="false"
                    fetch-state="false"
                    purge="false"
                    path="target/fedora_repository/store" />
      </persistence>

    </local-cache>

    <local-cache name="FedoraRepositoryMetaData" >
      <transaction transaction-manager-lookup="org.infinispan.transaction.lookup.GenericTransactionManagerLookup"
                   mode="NON_XA"
                   locking="OPTIMISTIC" />

      <persistence passivation="false">
        <file-store shared="false"
                    preload="false"
                    fetch-state="false"
                    purge="false"
                    path="target/fedora_repository/md_store" />
      </persistence>

    </local-cache>

    <local-cache name="FedoraRepositoryBinaryData" >
      <transaction transaction-manager-lookup="org.infinispan.transaction.lookup.GenericTransactionManagerLookup"
                   mode="NON_XA"
                   locking="OPTIMISTIC" />

      <persistence passivation="false">
        <file-store shared="false"
                    preload="false"
                    fetch-state="false"
                    purge="false"
                    path="target/fedora_repository/bin_store" />
      </persistence>

    </local-cache>
  </cache-container>

</infinispan>
