<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%p %d{HH:mm:ss.SSS} \(%c{0}\) %m%n</pattern>
    </encoder>
  </appender>

  <logger name="org.fcrepo.auth" level="${fcrepo.log.auth:-null}">
    <appender-ref ref="STDOUT"/>
  </logger>
  <logger name="org.fcrepo.connector.file" level="${fcrepo.log.connector.file:-null}">
    <appender-ref ref="STDOUT"/>
  </logger>
  <logger name="org.fcrepo.http.api" level="${fcrepo.log.http.api:-null}">
    <appender-ref ref="STDOUT"/>
  </logger>
  <logger name="org.fcrepo.http.commons" level="${fcrepo.log.http.commons:-null}">
    <appender-ref ref="STDOUT"/>
  </logger>
  <logger name="org.fcrepo.jms" level="${fcrepo.log.jms:-null}">
    <appender-ref ref="STDOUT"/>
  </logger>
  <logger name="org.fcrepo.kernel" level="${fcrepo.log.kernel:-null}">
    <appender-ref ref="STDOUT"/>
  </logger>
  <logger name="org.fcrepo.transform" level="${fcrepo.log.transform:-null}">
    <appender-ref ref="STDOUT"/>
  </logger>
  <logger name="org.fcrepo" level="${fcrepo.log:-INFO}">
    <appender-ref ref="STDOUT"/>
  </logger>

  <root level="WARN">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
