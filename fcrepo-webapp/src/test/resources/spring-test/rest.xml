<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">


  <context:property-placeholder/>

  <!-- Context that houses JAX-RS Resources that support the API. -->

  <context:annotation-config/>

  <bean class="org.fcrepo.http.commons.session.SessionFactory" />
   
  <!-- Mints PIDs-->
  <bean class="org.fcrepo.kernel.identifiers.UUIDPidMinter"/>
    
  <context:annotation-config />
  
  <context:component-scan base-package="org.fcrepo.kernel.services, org.fcrepo.exceptionhandlers, org.fcrepo.http.commons.responses, org.fcrepo.responses, org.fcrepo.auth.roles.common"/>

</beans>
