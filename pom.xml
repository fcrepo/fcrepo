          <exclude>org.slf4j:slf4j-jcl</exclude> <exclude>org.slf4j:slf4j-jdk14</exclude> 
          <exclude>org.slf4j:slf4j-log4j12</exclude> <exclude>org.slf4j:slf4j-log4j13</exclude> 
